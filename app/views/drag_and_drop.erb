<head>
  <meta charset="utf-8">
  <title>jQuery UI Draggable + Sortable</title>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.9.1.js"></script>
  <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css">
  <script>
  $(function() {
    $( "#sortable" ).sortable({
      revert: true
    });
    $( "#draggable" ).draggable({
      connectToSortable: "#sortable",
      helper: "clone",
      revert: "invalid"
    });
    $( "ul, img" ).disableSelection();
  });
  </script>
</head>

<body>
  <div class='container'>
    <div class='sample-of-combatants' id='sortable'>
      <img class="ui-state-default" src='/img/output3.jpg' alt='Combatant 3' title='Combatant 3'>
      <img class="ui-state-default" src='/img/output4.jpg' alt='Combatant 4' title='Combatant 4'>
      <img class="ui-state-default"  src='/img/output5.jpg' alt='Combatant 5' title='Combatant 5'>
      <img class="ui-state-default"  src='/img/output6.jpg' alt='Combatant 6' title='Combatant 6'>
      <img class="ui-state-default"  src='/img/output7.jpg' alt='Combatant 7' title='Combatant 7'>
    </div>

    <p>Which is taller?</p>
    <div class='contestants' id='combatant1'>
      <%= @random_building1.name %>
      <img src='<%= @random_building1.photo_url %>' alt='Combatant 2' title='Combatant 1'>
    </div>

    <div class='contestants' id='combatant2'>
      <%= @random_building2.name %>
      <img src='<%= @random_building2.photo_url %>' alt='Combatant 2' title='Combatant 2'>
    </div>

    <% if @winner %>
    <div id='winner'>
      <p>You answered <%= @guess.name %></p>
        <% if @guess == @winner %>
        <h2>RIGHT</h2>
      <% else %>
        <h2 class="wrong">WRONG</h2>
        <%= @winner.name %> !
        <br>
      <% end %>
      <a href='/'>Goto next question</a>
    </div>
    <% else %>
    <div id="choose">
    <form action="/answer" method="post">
      <input name="combatant1" value="<%= @random_building1.id %>" type="hidden">
      <input name="combatant2" value="<%= @random_building2.id %>" type="hidden">
      <input type="radio" name="taller" value="combatant1"><%= @random_building1.name %><br>
      <input type="radio" name="taller" value="combatant2"><%= @random_building2.name %><br>
      <input type="submit" value="Submit">
    </form>
    </div>
    <% end %>

  </div>
</body>